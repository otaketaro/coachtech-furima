<?xml version="1.0" encoding="UTF-8"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="./vendor/phpunit/phpunit/phpunit.xsd"
         bootstrap="vendor/autoload.php"
         colors="true"
         verbose="true">

  <testsuites>
    <testsuite name="Application Test Suite">
      <directory suffix="Test.php">./tests</directory>
    </testsuite>
  </testsuites>

  <coverage processUncoveredFiles="true">
    <include>
      <directory suffix=".php">./app</directory>
    </include>
  </coverage>

  <php>
    <!-- Deprecated / User Deprecated を抑止（E_ALL & ~E_DEPRECATED & ~E_USER_DEPRECATED 相当） -->
    <ini name="error_reporting" value="8191"/>

    <!-- テスト環境 -->
    <env name="APP_ENV" value="testing"/>
    <env name="APP_DEBUG" value="true"/>
    <env name="APP_URL" value="http://localhost"/>

    <!-- DB: テスト専用SQLiteファイル -->
    <env name="DB_CONNECTION" value="sqlite"/>
    <env name="DB_DATABASE" value="database/testing.sqlite"/>
    <env name="DB_FOREIGN_KEYS" value="true"/>

    <!-- 高速化＆副作用抑制 -->
    <env name="CACHE_DRIVER" value="array"/>
    <env name="SESSION_DRIVER" value="array"/>
    <env name="QUEUE_CONNECTION" value="sync"/>
    <env name="BROADCAST_DRIVER" value="log"/>
    <env name="LOG_CHANNEL" value="stack"/>
    <env name="LOG_LEVEL" value="warning"/>
    <env name="BCRYPT_ROUNDS" value="4"/>

    <!-- メール/ファイルはローカルで仮運用 -->
    <env name="MAIL_MAILER" value="array"/>
    <env name="MAIL_FROM_ADDRESS" value="test@example.com"/>
    <env name="FILESYSTEM_DISK" value="local"/>
  </php>
</phpunit>
